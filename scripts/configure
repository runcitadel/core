else:
  print("============ CONFIGURING =============")
  reconfiguring=False

print("============== UMBREL  ===============")
print("======================================")
print()

# Parse a dotenv file
def parse_dotenv(file_path):
    with open(file_path, 'r') as file:
      file_contents = file.read()
    values = {}
    lines = file_contents.split('\n')
    for line in lines:
      line = line.strip()
      if line.startswith('#') or not line:
        continue
      # Append to values
      key, value = line.split('=', 1)
      values[key] = value
    return values

  
