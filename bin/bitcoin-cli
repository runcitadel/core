set -euo pipefail

CITADEL_ROOT="$(readlink -f $(dirname "${BASH_SOURCE[0]}")/..)"

result=$(docker compose -f docker-compose.yml.citadel \
  --file "${CITADEL_ROOT}/docker-compose.yml.citadel" \
  --env-file "${CITADEL_ROOT}/.env" \
  exec bitcoin bitcoin-cli "$@")

# We need to echo with quotes to preserve output formatting
echo "$result"
